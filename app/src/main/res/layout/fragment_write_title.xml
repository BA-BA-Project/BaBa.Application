<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kids.baba.mobile.presentation.viewmodel.WriteTitleViewModel" />

        <variable
            name="callback"
            type="kids.baba.mobile.presentation.view.film.WriteTitleNavigator" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.film.WriteTitleFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/write_title_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:scaleType="fillCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageSrc="@{viewModel.currentTakenMedia.mediaPath}"


        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>