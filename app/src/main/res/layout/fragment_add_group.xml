<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="kids.baba.mobile.presentation.viewmodel.AddGroupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/top_app_bar"
                layout="@layout/composable_top_layout"
                bind:title="@{viewmodel.topAppBarTitle}" />

            <include
                android:id="@+id/banner_view"
                layout="@layout/composable_banner_view"
                bind:description="@{viewmodel.bannerDesc}"
                bind:title="@{viewmodel.bannerTitle}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            app:layout_constraintTop_toBottomOf="@+id/top_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/name_view"
                    layout="@layout/composable_input_with_desc_view"
                    bind:description="@{viewmodel.nameViewDesc}"
                    bind:title="@{viewmodel.nameViewTitle}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED" />

                <include
                    android:id="@+id/color_view"
                    layout="@layout/composable_color_view"
                    bind:title="@{viewmodel.colorViewTitle}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED" />

                <include
                    android:id="@+id/permission_view"
                    layout="@layout/composable_two_text_view"
                    bind:description="@{viewmodel.permissionViewDesc}"
                    bind:title="@{viewmodel.permissionViewTitle}" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_complete_blue"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
