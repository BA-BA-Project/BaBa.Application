<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="kids.baba.mobile.presentation.viewmodel.DeleteMemberViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/top_app_bar"
                layout="@layout/composable_top_layout"
                bind:title="@{viewmodel.uiModel.topAppBarTitle}"
                />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_complete"
            app:layout_constraintTop_toBottomOf="@+id/container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/banner_view"
                    layout="@layout/composable_banner_view"
                    bind:description="@{viewmodel.uiModel.bannerDesc}"
                    bind:title="@{viewmodel.uiModel.bannerTitle}" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/for_data_delete"
                    layout="@layout/composable_check"
                    bind:content="@{viewmodel.uiModel.forDataDeleteContent}" />

                <include
                    android:id="@+id/uncomfortable"
                    layout="@layout/composable_check"
                    bind:content="@{viewmodel.uiModel.uncomfortableContent}" />

                <include
                    android:id="@+id/frequent_errors"
                    layout="@layout/composable_check"
                    bind:content="@{viewmodel.uiModel.frequentErrorsContent}" />

                <include
                    android:id="@+id/not_use"
                    layout="@layout/composable_check"
                    bind:content="@{viewmodel.uiModel.notUseContent}" />

                <include
                    android:id="@+id/etc"
                    layout="@layout/composable_check"
                    bind:content="@{viewmodel.uiModel.etcContent}" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="@string/delete_warning"
            android:textColor="#ff0000"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_disable"
            android:text="@string/complete"
            android:textColor="#B4B4B4"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
