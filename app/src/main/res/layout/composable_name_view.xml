<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="button"
            type="String" />

        <variable
            name="nameViewData"
            type="kids.baba.mobile.presentation.binding.ComposableNameViewData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginStart="20dp"
            android:text="@{title}"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="아이 이름" />

        <TextView
            android:id="@+id/btn_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:enabled="@{ nameViewData.enabled ? ((nameViewData.text.equals(nameViewData.initialText) || nameViewData.text.empty) ? false : true) : false}"
            android:onClick="@{() -> nameViewData.onEditButtonClickEventListener.invoke()}"
            android:text="@{ nameViewData.enabled ? ((nameViewData.text.equals(nameViewData.initialText) || nameViewData.text.empty) ? @string/edit : @string/complete) : @string/literally_blank}"
            android:textColor="@{ nameViewData.enabled ? (( nameViewData.text.equals(nameViewData.initialText) || nameViewData.text.empty) ? @color/gray_50 : @color/baba_main) : @color/gray_50}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="편집" />

        <EditText
            android:id="@+id/tv_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_relation_badge"
            android:padding="4dp"
            android:text="@={nameViewData.text}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_edit_button"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
