<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="kids.baba.mobile.presentation.viewmodel.InviteMemberResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/top_app_bar"
                layout="@layout/composable_top_layout"
                bind:title="@{viewmodel.tvTopTitleText}" />

            <include
                android:id="@+id/banner_view"
                layout="@layout/composable_banner_view"
                bind:description="@{viewmodel.tvBannerDescText}"
                bind:title="@{viewmodel.tvBannerTitleText}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <include
                android:id="@+id/group_view"
                layout="@layout/composable_two_text_view"
                bind:description="@{viewmodel.tvGroupDescText}"
                bind:title="@{viewmodel.tvGroupTitleText}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="#EDEDED" />

            <include
                android:id="@+id/relation_view"
                layout="@layout/composable_two_text_view"
                bind:description="@{viewmodel.tvRelationDescText}"
                bind:title="@{viewmodel.tvRelationTitleText}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="#EDEDED" />

            <include
                android:id="@+id/permission_view"
                layout="@layout/composable_two_text_view"
                bind:description="@{viewmodel.tvPermissionDescText}"
                bind:title="@{viewmodel.tvPermissionTitleText}" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_complete"
            android:text="@string/check"
            android:textColor="@color/baba_main"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
