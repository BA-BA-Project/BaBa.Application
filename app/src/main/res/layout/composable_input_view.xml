<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="button"
            type="String" />

        <variable
            name="inputViewData"
            type="kids.baba.mobile.presentation.binding.ComposableInputViewData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:text="@{title}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/et_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="내 소개" />

        <TextView
            android:id="@+id/tv_input_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:enabled="@{ inputViewData.enabled ? ((inputViewData.text.equals(inputViewData.initialText) || inputViewData.text.empty) ? false : true) : false}"
            android:onClick="@{() -> inputViewData.onEditButtonClickEventListener.invoke()}"
            android:text="@{ inputViewData.enabled ? ((inputViewData.text.equals(inputViewData.initialText) || inputViewData.text.empty) ? @string/edit : @string/complete) : @string/literally_blank}"
            android:textColor="@{ inputViewData.enabled ? ((inputViewData.text.equals(inputViewData.initialText) || inputViewData.text.empty) ? @color/gray_50 : @color/baba_main) : @color/gray_50 }"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/et_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_input" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="52dp"
            android:background="@drawable/edit_input"
            android:padding="7dp"
            android:text="@={inputViewData.text}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_input_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="최대 20자 입력" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>